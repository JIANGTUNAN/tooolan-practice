<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 注册自定义日志级别颜色转换器 -->
    <conversionRule conversionWord="coloredLevel" class="com.tooolan.ddd.config.ColorLevelConverter"/>

    <!-- 日志输出格式 - 丰富的颜色配置 -->
    <!-- ERROR: 亮红色粗体, WARN: 亮黄色粗体, INFO: 亮青色, DEBUG: 亮绿色, TRACE: 灰色 -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%green(%d{HH:mm:ss.SSS}) %magenta([%thread]) %coloredLevel(%-5level) %blue([%-50.50class]) %msg%n"/>

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
